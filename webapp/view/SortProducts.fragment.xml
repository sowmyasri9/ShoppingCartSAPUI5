<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">

	<Dialog id="dialog" contentHeight="40%" contentWidth="10%" title="Sort Fragment" >
		<content>
	<VBox>
				<Text class="sapUiMediumMarginBegin sapUiSmallMarginTop sapThemeHighlight-asColor" text="Sort By :" />
				<ComboBox id="sortBy" class="sapUiMediumMarginBegin sapUiSmallMarginTop">
					<core:Item key="name" text="Product Name" />
					<core:Item  key="price" text="Price" />
				</ComboBox>
			</VBox>
		</content>
		<beginButton>
			<Button text="OK" press="onSort" />
		</beginButton>
		<endButton>
		 	<Button text="Close" press="closeDialog" />
		</endButton>
	</Dialog>

</core:FragmentDefinition>